---
const { title = 'Portal: Teoría de Compiladores' } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
    <style>
      :root { --bg:#0b1020; --card:#121a33; --muted:#cad3f5; --accent:#7aa2f7; }
      body { margin:0; font-family: system-ui, sans-serif; background:var(--bg); color:var(--muted); }
      header, main, footer { max-width: 980px; margin: auto; padding: 1.25rem; }
      a { color: var(--accent); text-decoration: none; }
      .card { background: var(--card); border-radius: 16px; padding: 1rem 1.25rem; box-shadow: 0 6px 24px rgba(0,0,0,.25); }
      .grid { display:grid; gap:1rem; }
    </style>
  </head>
  <body>
    <header class="grid">
      <h1>Teoría de Compiladores</h1>
      <slot name="nav" />
    </header>
    <main class="grid">
      <slot />
    </main>
    <footer class="grid">
      <small>UNIBE · {new Date().getFullYear()}</small>
    </footer>
  </body>
</html>

